<% @page_title = "UserAuth | Login" %>
<div class="sign_form">
	<h1>Log in</h1>
	<% if flash[:notice] %>
      <p class="notice">
      	<%= flash[:notice] %>
      </p>
    <% end %>
	<%= form_tag(:action => 'login_attempt') do %>
		<p>Username/E-mail: <%= text_field_tag :username_or_email %></p>
		<p>Password: <%= password_field_tag :login_password %></p>
		<%= submit_tag "Log in" %>
	<% end %>
	<%= button_to "Sign up!", :controller => "users", :action => "new" %>
</div>
